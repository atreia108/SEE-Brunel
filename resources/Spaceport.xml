        <Fom FilePath="resources/SpaceportFOM.xml" />
    </FomModules>
    <ObjectClasses>
        <ObjectClass Name="HLAobjectRoot.PhysicalEntity" Archetype="uk.ac.brunel.archetypes.PhysicalEntity" >
            <Attribute Name="name" Sharing="PublishSubscribe">
                <DataConverter Source="uk.ac.brunel.converters.HLAunicodeStringConverter" Trigger="0" />
            </Attribute>
            <Attribute Name="parent_reference_frame" Sharing="PublishSubscribe">
                <DataConverter Source="uk.ac.brunel.converters.HLAunicodeStringConverter" Trigger="4" />
            </Attribute>
            <Attribute Name="type" Sharing="PublishSubscribe">
                <DataConverter Source="uk.ac.brunel.converters.HLAunicodeStringConverter" Trigger="1" />
            </Attribute>
            <Attribute Name="status" Sharing="PublishSubscribe">
                <DataConverter Source="uk.ac.brunel.converters.HLAunicodeStringConverter" Trigger="2" />
            </Attribute>
            <Attribute Name="state" Sharing="PublishSubscribe">
                <DataConverter Source="uk.ac.brunel.converters.SpaceTimeCoordinateStateConverter" />
            </Attribute>
        </ObjectClass>
        <ObjectClass Name="HLAobjectRoot.ReferenceFrame" Archetype="uk.ac.brunel.archetypes.ReferenceFrame">
            <Attribute Name="name" Sharing="Subscribe">
                <DataConverter Source="uk.ac.brunel.converters.HLAunicodeStringConverter" Trigger="3" />
            </Attribute>
            <Attribute Name="parent_name" Sharing="Subscribe">
                <DataConverter Source="uk.ac.brunel.converters.HLAunicodeStringConverter" Trigger="4" />
            </Attribute>
            <Attribute Name="state" Sharing="Subscribe">
                <DataConverter Source="uk.ac.brunel.converters.SpaceTimeCoordinateStateConverter" />
