<?xml version="1.0" encoding="utf-8" ?>
<Simulation Name="Spaceport">
    <RtiConfiguration Host="localhost" Port="8989" Federation="SEE 2025" />
    <Engine MinEntities="100" MaxEntities="250" MinComponents="100" MaxComponents="250" />
