        </ObjectClass>
    </ObjectClasses>
    <InteractionClasses>
        <InteractionClass Name="HLAinteractionRoot.FederateMessage" Archetype="uk.ac.brunel.archetypes.FederateMessage" Sharing="PublishSubscribe">
            <Parameter Name="Sender">
                <DataConverter Source="uk.ac.brunel.converters.HLAunicodeStringConverter" Trigger="5" />
            </Parameter>
            <Parameter Name="Receiver">
                <DataConverter Source="uk.ac.brunel.converters.HLAunicodeStringConverter" Trigger="6" />
            </Parameter>
            <Parameter Name="MessageType">
                <DataConverter Source="uk.ac.brunel.converters.HLAunicodeStringConverter" Trigger="7" />
            </Parameter>
            <Parameter Name="Content">
                <DataConverter Source="uk.ac.brunel.converters.HLAunicodeStringConverter" Trigger="8" />
            </Parameter>
        </InteractionClass>
    </InteractionClasses>
